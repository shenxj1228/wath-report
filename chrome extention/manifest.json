{
    "name": "文件监视",
    "description": "文件监视chrome extention",
    "manifest_version": 2,
    "default_locale": "zh_CN",
    "options_page": "option.html",
    "permissions": ["notifications", "background"],
    "version": "0.1.0",
    "background": {
        "scripts": ["js/jquery.js", "js/background.js"]
    },
    "browser_action": {
        "default_icon": "images/48.png"
    },
    "icons": {
        "128": "images/128.png",
        "16": "images/16.png",
        "48": "images/48.png"
    },
    "web_accessible_resources": ["images/tx.png"]
}
